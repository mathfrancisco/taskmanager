# Dockerrun.aws.json

{
  "AWSEBDockerrunVersion": "3",
  "containerDefinitions": [
    {
      "name": "mysql",
      "image": "mysql:8.0",
      "essential": true,
      "memory": 256,
      "environment": [
        {"name": "MYSQL_ROOT_PASSWORD", "value": "root"},
        {"name": "MYSQL_DATABASE", "value": "task_db"}
      ],
      "portMappings": [
        {
          "hostPort": 3306,
          "containerPort": 3306
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "mysql-data",
          "containerPath": "/var/lib/mysql"
        }
      ]
    },
    {
      "name": "backend",
      "image": "0343-6203-7405.dkr.ecr.sa-east-1.amazonaws.com/taskmanager-backend:latest",
      "essential": true,
      "memory": 512,
      "environment": [
        {"name": "SPRING_PROFILES_ACTIVE", "value": "dev"},
        {"name": "SPRING_DATASOURCE_URL", "value": "jdbc:mysql://mysql:3306/task_db"}
      ],
      "portMappings": [
        {
          "hostPort": 8080,
          "containerPort": 8080
        }
      ]
    },
    {
      "name": "frontend",
      "image": "0343-6203-7405.dkr.ecr.sa-east-1.amazonaws.com/taskmanager-frontend:latest",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "mysql-data",
      "host": {
        "sourcePath": "/var/app/current/mysql-data"
      }
    }
  ]
}
