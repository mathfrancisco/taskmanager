{
  "AWSEBDockerrunVersion": "3",
  "containerDefinitions": [
    {
      "name": "mysql",
      "image": "mysql:8.0",
      "essential": true,
      "memory": 256,
      "environment": [
        {"name": "MYSQL_ROOT_PASSWORD", "value": "root"},
        {"name": "MYSQL_DATABASE", "value": "task_db"}
      ],
      "portMappings": [
        {
          "containerPort": 3306,
          "hostPort": 3306
        }
      ]
    },
    {
      "name": "backend",
      "image": "0343-6203-7405.dkr.ecr.sa-east-1.amazonaws.com/todolist-backend:latest",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "hostPort": 8080,
          "containerPort": 8080
        }
      ]
    },
    {
      "name": "frontend",
      "image": "0343-6203-7405.dkr.ecr.sa-east-1.amazonaws.com/todolist-frontend:latest",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ]
    }
  ]
}
